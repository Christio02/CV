---
import { Icon } from "astro-icon/components"
interface Props  {
    title: string,
    phone: string,
    mail: string,
    github: string,
}
const { title, phone, mail, github } = Astro.props
---

<section class="flex flex-col gap-x-5">
    <h3 class="text-2xl">{title}</h3>
    <ul class="flex flex-col gap-x-10">
        <li>
            <Icon name="phone-icon"/>
           {phone}
        </li>
        <li>
            <Icon name="mail-icon"/>
            {mail}
        </li>
        <li>
            <Icon name="github-icon"/>
            <a href="https://www.linkedin.com/in/christopher-h%C3%B8e-3b7924257/">{github}</a>
        </li>
    </ul>

</section>

<style>
    li {
        display: flex;
        flex-direction: row;
        gap: 1rem;
        align-items: center;
    }
</style>